    <div class="container">
      <h1>Historias Médicas</h1>
      <ul class="nav nav-tabs">
        <li role="presentation" class="active"><a href="#tabGeneral">General</a></li>
        <li role="presentation"><a href="#tabAtencion">Atención Médica</a></li>
      </ul>
      <br>
      <br>

      <form action="/historias/actualizar/<%= registro.id %>" method="post">

        <div class="tabDatos" id="tabGeneral">
          <div class="col-sm-6">
            <div class="panel panel-default">
              <div class="panel-heading">
                <strong>REQUERIMIENTO</strong>
              </div>
              <div class="panel-body">

                <div class="form-group">
                  <label>Número de historia</label>
                  <input type="number" required class="form-control" value="<%= registro.nhistoria %>" />
                </div>

                <div class="form-group">
                  <label>Fecha</label>
                  <input type="date" required class="form-control" value="<%= registro.dfecha %>" />
                </div>

                <div class="form-group">
                  <label>Compañía</label>
                  <select class="form-control">
                    <option value="1">Nombre 01</option>
                    <option value="2">Nombre 02</option>
                    <option value="3">Nombre 03</option>
                  </select>
                </div>


                <div class="form-group">
                  <label>Requerido</label>
                  <input type="text" required class="form-control" value="<%= registro.crequerido %>" />
                </div>

                <div class="form-group">
                  <label>Contratante</label>
                  <input type="text" required class="form-control" value="<%= registro.ccontratante %>" />
                </div>

                <div class="form-group">
                  <label>Poliza</label>
                  <input type="text" required class="form-control" value="<%= registro.cpoliza %>" />
                </div>

                <div class="form-group">
                  <label>Autorización</label>
                  <input type="text" required class="form-control" value="<%= registro.cautorizacion %>" />
                </div>

              </div>
            </div>
          </div>

          <div class="col-sm-6">
            <div class="panel panel-default">
              <div class="panel-heading">
                <strong>PACIENTE</strong>
              </div>
              <div class="panel-body">
                  <div class="form-group">
                    <label>Apellido Paterno</label>
                    <input type="text" required class="form-control" value="<%= registro.capellidoPaterno %>" />
                  </div>

                  <div class="form-group">
                    <label>Apellido Materno</label>
                    <input type="text" required class="form-control" value="<%= registro.capellidoMaterno %>" />
                  </div>

                  <div class="form-group">
                    <label>Nombres</label>
                    <input type="text" required class="form-control" value="<%= registro.cnombre %>" />
                  </div>

                  <div class="form-group">
                    <label>Sexo</label>
                    <select class="form-control">
                      <option value="1">Hombre</option>
                      <option value="2">Mujer</option>
                    </select>
                  </div>                

                  <div class="form-group">
                    <label>DNI</label>
                    <input type="text" required class="form-control" value="<%= registro.cdni %>" />
                  </div>

                  <div class="form-group">
                    <label>Teléfono</label>
                    <input type="text" required class="form-control" value="<%= registro.ctelefono %>" />
                  </div>

                  <div class="form-group">
                    <label>Edad</label>
                    <input type="number" required class="form-control" value="<%= registro.nedad %>" />
                  </div>

                  <div class="form-group">
                    <label>Unidad edad</label>
                    <select class="form-control">
                      <option value="1">Años</option>
                      <option value="2">Meses</option>
                    </select>
                  </div>                
              </div>
            </div>

            <div class="panel panel-default">
              <div class="panel-heading">
                <strong>OCURRENCIA</strong>
              </div>
              <div class="panel-body">
                <div class="form-group">
                  <label>Dirección</label>
                  <input type="text" required class="form-control" value="<%= registro.cdireccion %>" />
                </div>
                
                <div class="form-group">
                  <label>Distrito</label>
                  <select class="form-control">
                    <option value="1">Distrito 01</option>
                    <option value="2">Distrito 02</option>
                    <option value="3">Distrito 03</option>
                  </select>
                </div>

                <div class="form-group">
                  <label>Referencia</label>
                  <input type="text" required class="form-control"  value="<%= registro.creferencia %>"/>
                </div>


              </div>
            </div>
          </div>
        </div>
        <div class="tabDatos" id="tabAtencion">
          <div class="col-sm-6">
            <div class="panel panel-default">
              <div class="panel-heading">
                <strong>DATOS PRINCIPALES</strong>
              </div>
              <div class="panel-body">
                <div class="form-group">
                  <label>Diagnóstico</label>
                  <select class="form-control">
                    <option value="1">CIE 01</option>
                    <option value="2">CIE 02</option>
                    <option value="3">CIE 03</option>
                  </select>
                </div>

                <div class="form-group">
                  <label>Tipo de atención</label>
                  <select class="form-control">
                    <option value="1">Emergencia</option>
                    <option value="2">Traslado</option>
                    <option value="3">Consulta</option>
                  </select>
                </div>

              </div>
            </div>
            <div class="panel panel-default">
              <div class="panel-heading">
                <strong>RESPONSABLES</strong>
              </div>
              <div class="panel-body">
                <div class="form-group">
                  <label>Médico</label>
                  <select class="form-control">
                    <option value="1">Médico 01</option>
                    <option value="2">Médico 02</option>
                    <option value="3">Médico 03</option>
                  </select>
                </div>

                <div class="form-group">
                  <label>Enfermero</label>
                  <select class="form-control">
                    <option value="1">Enfermero 01</option>
                    <option value="2">Enfermero 02</option>
                    <option value="3">Enfermero 03</option>
                  </select>
                </div>

              </div>
            </div>            
          </div>        

          <div class="col-sm-6">
            <div class="panel panel-default">
              <div class="panel-heading">
                <strong>ANOTACIONES</strong>
              </div>
              <div class="panel-body">
                <div class="form-group">
                  <label>Síntomas</label>
                  <textarea class="form-control" row="4"><%= registro.csintomas %></textarea>
                </div>
                <div class="form-group">
                  <label>Tratamiento</label>
                  <textarea class="form-control" row=4>
                    <%= registro.ctratamiento %></textarea>
                </div>
                <div class="form-group">
                  <label>Observaciones</label>
                  <textarea class="form-control" row=4>
                    <%= registro.cobservaciones %></textarea>
                </div>

              </div>
            </div>
         
          </div>    
        </div>

        <button type="submit" class="btn btn-lg btn-success pull-right">GRABAR</button> 
        <a href="/historias/listar" class="btn btn-lg btn-info pull-left">REGRESAR</a>
      </form>

      <br>
      <br>


    </div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script>

	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>    
    <script src="/js/historias.js"></script> 

</body>
</html>